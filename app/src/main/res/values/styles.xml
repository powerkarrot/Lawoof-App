<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grassgreen</item>
        <item name="colorPrimaryDark">@color/grassgreen</item>
        <item name="colorAccent">@color/grassgreen</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText
        </item> <!--effectively being ignored-->
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText
        </item> <!--effectively being ignored-->

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText
        </item>    <!--effectively being ignored-->
    </style>

    <!-- Splash screen -->
    <style name="AppTheme.Launcher" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/holo_green_light</item>
        <item name="android:textColorPrimary">@android:color/holo_blue_light</item>
    </style>

    <!--style for action bar title-->
    <style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">   <!--effectively being ignored-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Popup" parent="@style/AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources><!--
